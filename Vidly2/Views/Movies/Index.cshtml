@model List<Vidly2.Models.Movie>


@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count == 0)
{
    <text>We don't have any movies yet!</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movies
                </th>
            </tr>
        </thead>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @movie.Name
                </td>
            </tr>
        }
    </table>
}

